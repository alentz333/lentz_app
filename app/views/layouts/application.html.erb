<!DOCTYPE html>
<html>
<head>
  <title>LentzApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="css/simple-sidebar.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        LentzApp
                    </a>
                </li>
                <li>
                    <a href="/"><i class="fa fa-tachometer"></i>&nbsp; Dashboard</a>
                    <!--<%= link_to "Dashboard", root_path %>-->
                </li>
                <li>
                    <a href="/import"><i class="fa fa-upload"></i>&nbsp; Import</a>
                   <!-- <%= link_to "Import", import_path %>-->
                </li>
                <li>
                    <a href="#"><i class="fa fa-cog"></i>&nbsp; Settings</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-pencil-square-o"></i>&nbsp; Contact</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-inverse navbar-fixed-top">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <a href="#menu-toggle" class="btn btn-default navbar-brand" id="menu-toggle">
                                        <i class="fa fa-bars fa-1x"></i>
                                    </a>
                                </div>
                            </div>
                        </nav>
                        <div class="container-fluid">
                            <div id="flash">
                                <% flash.each do |key, value| %>
                                    <%= content_tag :div, value, class: "alert alert-#{key}" %>
                                <% end %>
                            </div>
                        </div>
                        <%= yield %>
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

    <script type="text/javascript">
    $(document).ready(function(){
      setTimeout(function(){
        $('#flash').fadeOut();
      }, 3000);
    })
    </script>

</body>
</html>
