  $("tr").click(function() {
  $(this).removeClass();
  if ($("#green").hasClass("active")){
    $(this).addClass("success");
  }
  if ($("#yellow").hasClass("active")){
    $(this).addClass("warning");
  }
  if ($("#blue").hasClass("active")){
    $(this).addClass("info");
  }
  if ($("#red").hasClass("active")){
    $(this).addClass("danger");
  }
});
</script>













